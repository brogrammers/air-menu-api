upstream air-menu-api {
  server unix:/tmp/unicorn.<%= application %>.sock fail_timeout=0;
}

server {
  listen 443;
  server_name stage.air-menu.com;

  access_log /var/log/nginx/stage.air-menu.com.log;

  ssl on;
  ssl_certificate      /etc/ssl/certs/stage.eventhub.com.crt;
  ssl_certificate_key  /etc/ssl/private/stage.eventhub.com.key;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  location / {
    root <%= current_path %>/public;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_set_header X-NginX-Proxy true;
    proxy_set_header X_FORWARDED_PROTO https;

    access_log off;
    expires off;

    proxy_pass http://air-menu-api;
    proxy_redirect off;
  }

  client_max_body_size 4G;
  keepalive_timeout 10;
}